{
	"name": "simple-nest-app",
	"version": "0.3.0",
	"description": "",
	"engines": {
		"node": ">=16.12.0"
	},
	"author": {
		"email": "anthony.williams.cs@gmail.com",
		"name": "Anthony Williams",
		"url": "https://github.com/Wolven531/simple-nest-app"
	},
	"private": true,
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"//prebuild": "rimraf dist && yarn && yarn test",
		"prebuild": "rimraf dist && yarn",
		"prestart": "yarn build",
		"start": "node dist/main",
		"start:debug": "nest start --debug --watch",
		"start:dev": "nest start --watch",
		"start:dev:no-watch": "nest start",
		"start:prod": "node dist/main",
		"test": "jest --coverage --coveragePathIgnorePatterns=.+\\.module\\.ts$ --coveragePathIgnorePatterns=.+\\.dto\\.ts$ --coveragePathIgnorePatterns=.+\\.model\\.ts$ --coveragePathIgnorePatterns=index\\.ts$ --coveragePathIgnorePatterns=^main\\.ts$",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test:no-cov": "jest",
		"test:watch": "jest --watch"
	},
	"dependencies": {
		"@apollo/gateway": "^0.44.1",
		"@hapi/joi": "^17.1.1",
		"@nestjs/axios": "^0.0.3",
		"@nestjs/cli": "^8.1.6",
		"@nestjs/common": "8.2.4",
		"@nestjs/config": "^1.1.5",
		"@nestjs/core": "8.2.4",
		"@nestjs/graphql": "9.1.2",
		"@nestjs/platform-express": "^8.2.4",
		"@nestjs/schematics": "^8.0.5",
		"@nestjs/serve-static": "^2.2.2",
		"@nestjs/swagger": "^5.1.5",
		"@nestjs/testing": "^8.2.4",
		"apollo-server-express": "^3.5.0",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.2",
		"compression": "^1.7.4",
		"graphql": "^15.8.0",
		"graphql-query-complexity": "0.11.0",
		"graphql-subscriptions": "2.0.0",
		"moment": "^2.29.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^7.4.0",
		"swagger-ui-express": "^4.3.0",
		"swagger-ui-themes": "^3.0.1",
		"ts-loader": "^9.2.6",
		"ts-morph": "^13.0.2",
		"ts-node": "^10.4.0",
		"tsconfig-paths": "^3.12.0",
		"typescript": "^4.2.3"
	},
	"devDependencies": {
		"@types/express": "^4.17.13",
		"@types/jest": "^27.0.3",
		"@types/node": "^14.17.6",
		"@types/supertest": "^2.0.11",
		"@types/swagger-ui-express": "4.1.3",
		"@typescript-eslint/eslint-plugin": "^4.28.5",
		"@typescript-eslint/parser": "^4.28.5",
		"eslint": "^7.31.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^27.4.5",
		"prettier": "^2.3.2",
		"supertest": "^6.1.4",
		"ts-jest": "^27.1.2"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
